<script>
function updateNewsTimes(){
document.querySelectorAll('.news-card').forEach(card=>{
if(!card.dataset.time){
const d=new Date();
const t=`${String(d.getDate()).padStart(2,'0')}/${String(d.getMonth()+1).padStart(2,'0')}/${d.getFullYear()} ${String(d.getHours()).padStart(2,'0')}:${String(d.getMinutes()).padStart(2,'0')}`;
card.dataset.time=t;
card.querySelector('.time').innerText=t;
}
});
}

const cards=document.querySelectorAll('.news-card');
const list=document.getElementById('newsList');
const single=document.getElementById('singleNews');

window.onload=()=>{
updateNewsTimes();

cards.forEach(card=>{
card.onclick=()=>{
list.style.display="none";
single.style.display="block";
singleTitle.innerText=card.querySelector('h3').innerText;
singleText.innerText=card.querySelector('p').innerText;
singleTime.innerText=card.dataset.time;
window.scrollTo(0,0);
}
});
}

function backToList(){
single.style.display="none";
list.style.display="block";
}

function filterNews(cat,el){
document.querySelectorAll('.cat').forEach(c=>c.classList.remove('active'));
el.classList.add('active');

cards.forEach(card=>{
card.style.display=(card.dataset.cat===cat)?"block":"none";
});
}
</script>

